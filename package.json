{
  "name": "spectre-react-lib",
  "version": "0.5.0-beta",
  "description": "Spectre.css and React integration",
  "author": "Philip Van Raalte",
  "license": "MIT",
  "keywords": [
    "react",
    "spectre",
    "ui"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/FIL1994/spectre-react-lib"
  },
  "bugs": {
    "url": "https://github.com/FIL1994/spectre-react-lib/issues"
  },
  "homepage": "https://github.com/FIL1994/spectre-react-lib#readme",
  "scripts": {
    "build": "tsup --config tsup.config.ts",
    "format": "prettier --cache -w ."
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "treeshake": true,
    "sourcemap": "inline",
    "minify": true,
    "clean": true,
    "dts": true,
    "splitting": false,
    "format": [
      "cjs",
      "esm"
    ],
    "external": [
      "react"
    ],
    "injectStyle": false
  },
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "prettier": "^3.1.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17"
  },
  "resolutions": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
